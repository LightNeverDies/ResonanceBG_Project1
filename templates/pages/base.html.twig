<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block pageTitle %}{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="{% block pageDescr %}{% endblock %}">
        <link rel="stylesheet" type="text/css" href="../styles/scss/main.css"/>
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script>window.jQuery || document.write('<script src="../vendor/jquery/jquery-3.4.1.min.js"><\/script>');</script>
    </head>
    <body>
        {% block contentWrapperStart %}
        <div class="main-wrapper-index">
        {% endblock %}

            {% block header %}
                {% include 'header.html.twig' %}
            {% endblock %}

            <main>{% block content %}{% endblock content %}</main>
        
            {% block footer %}
                {% include 'footer.html.twig' %}
            {% endblock %}

            {% block javascripts %}{% endblock %}

        {% block contentWrapperEnd %}
        </div>
        {% endblock %}
    </body>
</html>
